{
  "name": "universal-web-scraper",
  "version": "0.1.0",
  "description": "Generic, extensible web scraper using Crawlee + Playwright with pluggable parsers and Zod validation (news + social media examples).",
  "type": "module",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "NODE_ENV=development nodemon --watch src src/index.js --trace-warnings",
    "lint": "eslint . --ext .js,.mjs",
    "lint:fix": "eslint . --ext .js,.mjs --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "format:eslint": "prettier-eslint --write 'src/**/*.js'",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "build": "npm run lint && npm run test:ci",
    "postinstall": "playwright install",
    "validate": "npm run lint && npm run format:check && npm run test:ci"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "dependencies": {
    "@extractus/article-extractor": "^8.0.19",
    "crawlee": "^3.9.2",
    "crawlee-pino": "^0.2.1",
    "dotenv": "^16.4.5",
    "pino": "^9.3.2",
    "playwright": "^1.47.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "audit-ci": "^6.6.1",
    "eslint": "^8.57.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jest": "^27.9.0",
    "eslint-plugin-n": "^16.6.2",
    "eslint-plugin-promise": "^6.2.0",
    "eslint-plugin-security": "^1.7.1",
    "jest": "^29.7.0",
    "jest-environment-node": "^29.7.0",
    "nodemon": "^3.1.4",
    "pino-pretty": "^11.2.2",
    "prettier": "^3.6.2",
    "prettier-eslint": "^16.4.2",
    "prettier-eslint-cli": "^8.0.1",
    "supertest": "^6.3.4"
  },
  "keywords": [
    "crawlee",
    "playwright",
    "web-scraping",
    "parser-registry",
    "zod",
    "article-extractor"
  ],
  "author": "",
  "license": "MIT",
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/index.js",
      "!**/node_modules/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 24,
        "functions": 48,
        "lines": 40,
        "statements": 40
      }
    },
    "testMatch": [
      "**/test/**/*.test.js",
      "**/tests/**/*.test.js"
    ],
    "verbose": true,
    "transform": {}
  }
}
